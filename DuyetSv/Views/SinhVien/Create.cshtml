@model DuyetSv.Models.SinhVien

<h2>Thêm sinh viên mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="HoVaTen" class="control-label">Họ và tên</label>
        <input asp-for="HoVaTen" class="form-control" />
        <span asp-validation-for="HoVaTen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SDT" class="control-label">Số điện thoại</label>
        <input asp-for="SDT" class="form-control" />
        <span asp-validation-for="SDT" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CCCD" class="control-label">Căn cước công dân</label>
        <input asp-for="CCCD" class="form-control" />
        <span asp-validation-for="CCCD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QueQuan" class="control-label">Quê quán</label>
        <input asp-for="QueQuan" class="form-control" />
        <span asp-validation-for="QueQuan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NganhHoc" class="control-label">Ngành học</label>
        <input asp-for="NganhHoc" class="form-control" />
        <span asp-validation-for="NganhHoc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiemTBM1" class="control-label">Điểm TBM 1</label>
        <input asp-for="DiemTBM1" class="form-control" />
        <span asp-validation-for="DiemTBM1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiemTBM2" class="control-label">Điểm TBM 2</label>
        <input asp-for="DiemTBM2" class="form-control" />
        <span asp-validation-for="DiemTBM2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiemTBM3" class="control-label">Điểm TBM 3</label>
        <input asp-for="DiemTBM3" class="form-control" />
        <span asp-validation-for="DiemTBM3" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="XepLoai" class="control-label">Xếp loại</label>
        <input asp-for="XepLoai" class="form-control" />
        <span asp-validation-for="XepLoai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
